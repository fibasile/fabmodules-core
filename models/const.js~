define([], function() {

    var Const = {
    //
    // define colors
    //
    this.R = 0;
    this.G = 1;
    this.B = 2;
    this.A = 3;
    //
    // define word 0 states
    //
    this.STATE = 0;
    this.EMPTY = 0;
    this.INTERIOR = (1 << 0);
    this.EDGE = (1 << 1);
    this.START = (1 << 2);
    this.STOP = (1 << 3);
    //
    // define word 1 directions
    //
    this.DIRECTION = 1;
    this.NONE = 0;
    this.NORTH = (1 << 0);
    this.SOUTH = (1 << 1);
    this.EAST = (1 << 2);
    this.WEST = (1 << 3);
    //
    // define axes
    //
    this.X = 0;
    this.Y = 1;
    this.Z = 2;

    };


    return Const;
});
